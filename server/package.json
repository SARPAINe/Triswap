{
  "name": "bcs-be",
  "version": "1.0.0",
  "description": "BJIT Swap Backend Services",
  "main": "./src/server.ts",
  "author": "Ragib Shahariar Ayon",
  "license": "ISC",
  "scripts": {
    "build": "npx tsc",
    "build:watch": "npx tsc --watch",
    "start": "cross-env NODE_ENV=production node ./build/server.js",
    "start:dev": "cross-env NODE_ENV=development PORT=3333 nodemon",
    "start:stg": "npm run build && pm2 start ecosystem.config.js --only bcs-be-stg",
    "restart:stg": "npm run build && pm2 stop bcs-be-stg --silent || true && pm2 start ecosystem.config.js --only bcs-be-stg",
    "start:test": "cross-env NODE_ENV=test nodemon",
    "test": "cross-env NODE_ENV=test npx jest",
    "test:staged": "cross-env NODE_ENV=test npx jest --passWithNoTests",
    "test:watch": "cross-env NODE_ENV=test jest --watchAll",
    "lint": "eslint --ignore-path .eslintignore \"**/*.+(js|ts|json)\"",
    "lint:fix": "eslint --fix --ignore-path .eslintignore \"**/*.+(js|ts|json)\"",
    "format": "prettier --ignore-path .prettierignore --write \"**/*.+(js|ts|json)\"",
    "prepare": "cd .. && husky install server/.husky",
    "pre-commit": "npx lint-staged",
    "commit": "commit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.0",
    "@commitlint/config-conventional": "^18.4.0",
    "@commitlint/prompt-cli": "^18.4.0",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.16",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/jest": "^29.5.10",
    "@types/morgan": "^1.9.9",
    "@types/nodemailer": "^6.4.14",
    "@types/passport": "^1.0.15",
    "@types/passport-jwt": "^3.0.13",
    "@types/passport-local": "^1.0.38",
    "@types/sqlite3": "^3.1.11",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^39.1.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.3.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "sequelize-cli": "^6.6.2",
    "sqlite3": "^5.1.6",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "connect-session-sequelize": "^7.1.7",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-flash": "^0.0.2",
    "express-session": "^1.17.3",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "husky": "^8.0.3",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "mysql2": "^3.6.3",
    "nodemailer": "^6.9.7",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "sequelize": "^6.35.1",
    "uuid": "^9.0.1",
    "web3": "^4.2.2",
    "winston": "^3.11.0"
  }
}
