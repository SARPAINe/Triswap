{
  "name": "bjit-swap-backend",
  "version": "1.0.0",
  "description": "BJIT Swap backend services",
  "main": "./src/server.ts",
  "scripts": {
    "start": "cross-env NODE_ENV=development nodemon",
    "start:prod": "cross-env NODE_ENV=production node ./build/server.js",
    "build": "npx tsc",
    "lint": "eslint --ignore-path .eslintignore \"**/*.+(js|ts|json)\"",
    "lint:fix": "eslint --fix --ignore-path .eslintignore \"**/*.+(js|ts|json)\"",
    "format": "prettier --ignore-path .prettierignore --write \"**/*.+(js|ts|json)\"",
    "prepare": "cd .. && husky install server/.husky",
    "commit": "commit"
  },
  "author": "Ragib Shahariar Ayon",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^18.4.0",
    "@commitlint/config-conventional": "^18.4.0",
    "@commitlint/prompt-cli": "^18.4.0",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.16",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^39.1.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.3.0",
    "eslint-plugin-promise": "^6.1.1",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "husky": "^8.0.3",
    "morgan": "^1.10.0",
    "web3": "^4.2.2",
    "winston": "^3.11.0"
  }
}
